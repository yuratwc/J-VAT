<Window x:Class="JouhouVPNTool.NewDirectoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JouhouVPNTool"
        mc:Ignorable="d"
        Title="新規フォルダ" Height="155" Width="360" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBox x:Name="textBoxFolderName" Margin="21,32,10,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" TabIndex="1" Grid.ColumnSpan="2" TextChanged="textBoxFolderName_TextChanged"/>
        <Label Content="新規フォルダ名称" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top" Height="26" Width="117" Grid.ColumnSpan="2"/>
        <Button x:Name="btnOK" Content="作成" Margin="0,55,107,0" TabIndex="4" Click="btnOK_Click" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Width="82"/>
        <Button x:Name="btnCancel" Content="キャンセル" Margin="0,55,10,0" TabIndex="4" Click="btnCancel_Click" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Width="82"/>

    </Grid>
</Window>
